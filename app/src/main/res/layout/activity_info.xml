<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Barra de herramientas -->
        <include layout="@layout/toolbar"/>

        <!-- ScrollView para el contenido deslizable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- Carrusel de imágenes de la peluquería -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerPeluqueria"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Mapa de Google Maps -->
                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        map:uiRotateGestures="true"
                        map:uiZoomControls="true" />

                    <!-- Botón para abrir en Maps -->
                    <ImageButton
                        android:id="@+id/btnAbrirMapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/maps"
                        android:background="@null"
                        android:layout_gravity="center|bottom"
                        android:layout_margin="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Av. Gran Canaria, 2, local 2, 29130 El Peñón, Málaga"
                        android:background="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginStart="15dp"/>

                </FrameLayout>

                <!-- Horarios -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horarios:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes a Viernes: 10:00 - 18:00\nSábados: 10:00 - 14:00"
                    android:layout_marginStart="16dp" />

                <!-- Botón para ver información del equipo -->
                <Button
                    android:id="@+id/btnEquipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conócenos!"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_horizontal" />

                <!-- Carrusel de cards con información del equipo (inicialmente invisible) -->
                <ImageView
                    android:id="@+id/imageViewEquipo"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/equipo"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />

                <!-- Botón de WhatsApp -->
                <Button
                    android:id="@+id/btnWhatsApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escríbenos!"
                    android:drawableEnd="@drawable/whatsapp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_horizontal" />

                <!-- Botón de Instagram -->
                <Button
                    android:id="@+id/btnInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instagram"
                    android:drawableEnd="@drawable/insta"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_horizontal" />

                <!-- Botón de Facebook -->
                <Button
                    android:id="@+id/btnFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:drawableEnd="@drawable/facebook"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Panel lateral -->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include layout="@layout/nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
